<br />
<div class="booyah-box col-10 offset-1">
  <br />
  <h1 class="text-center">What I'm Learning</h1>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
   <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
      <br /><br />
      <%= image_tag course.image.url, class: 'img-fluid' %>
      <br /><br />
      <div class="row">
        <div class="col-12 col-sm">
          <%= course.description %>
        </div>
        <div class="col-12 col-sm text-center">
          <%= link_to "More Info...", course_path(course), class: 'btn btn-primary' %>
        </div>
      </div>
    <hr class="col-8 offset-2">    
    <br class="clr" />  
  </h3>
  <% end %>
  <br /><br />
  <h1 class="text-center">What I'm Teaching</h1>
  <br />
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
          <br /><br />
          <%= image_tag course.image.url, class: 'img-fluid' %>
          <br /><br />
          <div class="row">
            <div class="col-12 col-sm">
              <%= course.description %>
            </div>
            <div class="col-12 col-sm text-center">
              <%= link_to "More Info...", course_path(course), class: 'btn btn-primary' %>
            </div>
          </div>
        <hr class="col-8 offset-2">    
        <br class="clr" />  
    </h3>
  <% end %>   
</div>